<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Short one</th>
      <th>Short two</th>
      <th>Short three</th>
      <th>Medium one</th>
      <th>Medium two</th>
      <th>Long</th>
      <th>Dream</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.player_id %></td>
        <td><%= goal.short_one %></td>
        <td><%= goal.short_two %></td>
        <td><%= goal.short_three %></td>
        <td><%= goal.medium_one %></td>
        <td><%= goal.medium_two %></td>
        <td><%= goal.long %></td>
        <td><%= goal.dream %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

