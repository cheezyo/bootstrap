<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table class="table table-striped table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Navn</th>
      <th>Dette semesteret</th>
      <th>Dette året</th>
      <th>Om 3 år</th>
      <th>Drøm</th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= link_to goal.player.fullname, goal.player %></td>
        <td><b>#1: </b><%= goal.short_one %> <br/> <b>#2: </b> <%= goal.short_two %><br/> <b>#3: </b> <%= goal.short_three %></td>
      
        <td><b>#1: </b><%= goal.medium_one %> <br/><b>#2: </b> <%= goal.medium_two %></td>
     
        <td><%= goal.long %></td>
        <td><%= goal.dream %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>


