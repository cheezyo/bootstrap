

<p id="notice"><%= notice %></p>
<!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Players</h1>
           <%= link_to 'New Player', new_player_path, :class => "btn btn-primary" %>
          </div>
 <!-- DataTales Example -->
        <% i = 0 %>

        

          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <nav class="navbar navbar-expand-lg navbar-light bg-light p-0" >
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
             
                   
                  </ul>
                </div>
              </nav>
            </div>
            <div class="card-body">
              
                <table class="table table-striped table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Age</th>
                      <th>Planet</th>
                
                    </tr>
                  </thead>
                 
                  <tbody>

                    <% @players.each do |player| %>
                    <tr>
                      <td><%= link_to player.fullname, player %></td>
                      <td><%= player.age %></td>
                      <td><%= player.planet.blank? ? "empty" : player.planet.title %></td>
                     

                    </tr>
                  <% end %>
                 
                    </tbody>
                </table>

            </div>
          </div>