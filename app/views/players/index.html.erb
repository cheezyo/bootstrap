

<p id="notice"><%= notice %></p>
<!-- Page Heading -->
         
   

          <div class="card shadow mb-4">
            <div class="card-header py-3">
               <div class="d-sm-flex align-items-center justify-content-between mb-0">
                <h1 class="h3 mb-0 text-gray-800">Players</h1>
              </div>
             
                <%= link_to '+ New Player', new_player_path, :class => "btn btn-primary mt-3 pb-2" %>

            </div>
            <div class="card-body">
              
                <table class="table table-striped table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Age</th>
                      <th>Planet</th>
                      <th>Coach</th>
                     
                   
                
                    </tr>
                  </thead>
                 
                  <tbody>

                    <% @players.each do |player| %>
                    <tr>
                      <td><%= link_to player.fullname, player %></td>
                      <td><%= player.get_age %></td>
                      <td><%= player.planet.blank? ? "empty" : player.planet.title %></td>
                      <td>
                        <% if !player.got_coach? && current_user.admin? %>  
                                          
                            <%= form_for UserPlayer.new do |f| %>
                            <%= f.collection_select :user_id, User.where(coach: true), :id, :name, :class => "form-control form-control-user", :include_blank => 'Choose coach' %>
                            <%= f.hidden_field :player_id, :value => player.id %>
                            <%= f.submit "Add" , :class => "btn btn-success"%>
                          <% end %>
                        <% end %>
                        <% if player.got_coach? && current_user.admin? %>           
                            <%= form_for UserPlayer.where(user_id: player.coach.id, player_id: player.id).first do |f| %>
                            <%= f.collection_select :user_id, User.where(coach: true), :id, :name, :class => "form-control form-control-user" %>
                            <%= f.hidden_field :player_id, :value => player.id %>
                            <%= f.submit "Edit" , :class => "btn btn-success"%>
                          <% end %>
                          <% end %>

                      </td>
                      
                        
                    </tr>
                  <% end %>
                 
                    </tbody>
                </table>

            </div>
          </div>