

<p id="notice"><%= notice %></p>
<!-- Page Heading -->
         
   

          <div class="card shadow mb-4">
            <div class="card-header py-3">
               <div class="d-sm-flex align-items-center justify-content-between mb-0">
                <h1 class="h3 mb-0 text-gray-800">Players</h1>
              </div>
             
                <%= link_to 'New Player', new_player_path, :class => "btn btn-primary mt-3" %>

            </div>
            <div class="card-body">
              
                <table class="table table-striped table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Age</th>
                      <th>Planet</th>
                      <% if @current_user.admin? %> 
                        <th>User</th>
                      <% end %>
                      <th>User</th>
                
                    </tr>
                  </thead>
                 
                  <tbody>

                    <% @players.each do |player| %>
                    <tr>
                      <td><%= link_to player.fullname, player %></td>
                      <td><%= player.age %></td>
                      <td><%= player.planet.blank? ? "empty" : player.planet.title %></td>
                      
                      <% if @current_user.admin? %> 
                        <% if ! user.got_profile? %> 
                            <%= form_for UserPlayer.new do |f| %>
                              <%= f.collection_select :user_id, User.where(parent: false, coach: false, admin: false), :id, :name, :class => "form-control form-control-user", :include_blank => 'choose user' %>
                              <%= f.hidden_field :player_id, :value => player.id %>
                              <%= f.submit "Save" , :class => "btn btn-success"%>
                            <% end %>
                            <% else %>

                          <% end %>
                        <% end %>
                    </tr>
                  <% end %>
                 
                    </tbody>
                </table>

            </div>
          </div>