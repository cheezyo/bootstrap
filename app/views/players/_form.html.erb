<%= form_with(model: player, local: true) do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="col-sm-12 col-lg-3 mb-4">           
    <%= form.text_field :name, autofocus: true, autocomplete: "First name", :class => "form-control form-control-user", placeholder: 'First name' %>
  </div>
 <div class="col-sm-12 col-lg-3 mb-4">
    <%= form.text_field :lastname, autocomplete: "Last name", :class => "form-control form-control-user", placeholder: 'Last name'%>
  </div>

  <div class="col-sm-12 col-lg-3 mb-4">
    <%= form.label :age %>
     <%= form.date_select :age, start_year: 1940, end_year: Time.now.year, :class => 'form-control'  %>
  </div>

  <div class="col-sm-12 col-lg-3 mb-4">
    <%= form.label :gender %><br />
    <%= form.label :gender, "male", :value => "male"  %>
    <%= form.radio_button :gender, "male" %>
    <%= form.label :gender, "female", :value => "female" %>
    <%= form.radio_button :gender, "female" %>
  </div>

  <% if can? :assign_roles, @user %>
  <div class="col-sm-12 col-lg-3 mb-4">
    <%= form.label :competitor %><br />
    <%= form.label :competitor, "Yes", :value => true  %>
    <%= form.radio_button :competitor, true %>
    <%= form.label :competitor, "No", :value => false %>
    <%= form.radio_button :competitor, false %>
  </div>
  <div class="col-sm-12 col-lg-3 mb-4">
    <%= form.collection_select :level_id, Level.all, :id, :name, :class => "form-control form-control-user" %>
  </div>
  <div class="col-sm-12 col-lg-3 mb-4">
    <%= form.collection_select :planet_id, Planet.all, :id, :title, :class => "form-control form-control-user" %>
  </div> 
  <div class="col-sm-12 col-lg-3 mb-4">
  <%= form.text_field :utr_profile, autocomplete: "UTR id", :class => "form-control form-control-user", placeholder: 'UTR id'%>
  </div>
   
  <% end %> 
  <div class="actions">
    <%= form.submit class: "btn btn-success btn-user  mb-4"%>
  </div>
<% end %>
