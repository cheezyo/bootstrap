<table class="table table-striped table-hover table-sm table-responsive-xl " id="dataTable" width="100%" cellspacing="0">
		  <thead class="thead-light">
		    <tr>
		    	<th>Date</th>
		      <th>Sprint</th>
		      <th>Spider</th>
		      <th>Jump</th>
		      <th>Fh throw</th>
		      <th>Bh throw</th>
		      <th>Box</th>
		      <th>Chins</th>
		      <th>Sit ups</th>
		      <th>Push ups</th>
		      <th>Front stretch</th>
		      <th>Back stretch</th>
		      <th>Beep</th>
		      <th>Test score</th>  
		      <% if can? :edit, Test %>
		      <th></th> 

		     <% end %>
		    </tr>
		  </thead>

		  <tbody>
		  	<% @player.tests.each do |t| %>

		  	<% if t.program1.present?  %>
		  		<% program1 = t.program1 %>
		  	<% end %>
		  	<% if t.program2.present?  %>
		  		<% program2 = t.program2 %>
		  	<% end %>
		  	<% counter = 1 %> 
		  	<tr>
		  		<td>
		  			<% if can? :edit, Test %>
		  				<%= link_to t.test_date, tests_path + "?group=" + t.test_group.id.to_s %><small>(<%= t.age %>)</small>
		  			<% else %>
		  				<%= t.test_date %><small>(<%= t.age %>)</small>
		  			<% end %>
		  				
		  		</td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 1 %>
		  		<%= t.sprint %></td>

		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 1 %>
		  		<%= t.spider %></td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 1 %>
		  		<%= t.jump %></td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		
		  		<%= t.fh_throw %></td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 2 %>
		  		<%= t.bh_throw %></td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 1 %>
		  		<%= t.box %></td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 1 %>
		  		<%= t.chins %></td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 1 %>
		  		<%= t.situps %></td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 1 %>
		  		<%= t.pushups %></td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 1 %>
		  		<%= t.front_stretch %></td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 1 %>
		  		<%= t.back_stretch %></td>
		  		<% if counter == program1 || counter == program2 %>
		  			<td style="background:yellow;">
		  		<% else %>
					<td>
		  		<% end %>
		  		<% counter += 1 %>
		  		<%= t.beep %></td>
		  		<td><%= t.test_score %></td>
		  		 <% if can? :edit, Test %>
		  		<td>
		  			<%= link_to  edit_test_path(t) do %>
		            <span><i class="fas fa-pen mr-2 ml-2" style="color:green;"></i></span>
		          <% end %>
		          <%= link_to  t, method: :delete, data: { confirm: 'Are you sure?' } do %>
		            <span><i class="fas fa-minus-square mr-2 ml-2" style="color:red;"></i></span>
		          <% end %>
		  		</td>

		  		<% end %>

		  	</tr>
		  	<% end %>

		  </tbody>

		</table>