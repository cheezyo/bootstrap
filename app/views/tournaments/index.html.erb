<p id="notice"><%= notice %></p>

<h1>Events</h1>
<table class="table table-striped table-hover table-sm table-responsive-xl " id="dataTable" width="100%" cellspacing="0">

  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>U11</th>
      <th>U12</th>
      <th>U13</th>
      <th>U14</th>
      <th>U15</th>
      <th>U16</th>
      <th>U19</th>
      
    </tr>
  </thead>

  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.start_date.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to tournament.title, tournament %>
          <%= link_to  edit_tournament_path(tournament) do %>
            <span><i class="fas fa-pen mr-2 ml-2" style="color:green;"></i></span>
          <% end %>
          <%= link_to  tournament, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span><i class="fas fa-minus-square mr-2 ml-2" style="color:red;"></i></span>
          <% end %>
        </td>
        <td>
        <% if tournament.u11? %>
        <i class="fas fa-check" style="color: green;"></i>
        <% else %>
        <i class="fas fa-times" style="color: red;"></i>
        <% end %>
        </td>
        <td>
        <% if tournament.u12? %>
        <i class="fas fa-check" style="color: green;"></i>
        <% else %>
        <i class="fas fa-times" style="color: red;"></i>
        <% end %>
        </td>
        <td>
        <% if tournament.u13? %>
        <i class="fas fa-check" style="color: green;"></i>
        <% else %>
        <i class="fas fa-times" style="color: red;"></i>
        <% end %>
        </td>
        <td>
        <% if tournament.u14? %>
        <i class="fas fa-check" style="color: green;"></i>
        <% else %>
        <i class="fas fa-times" style="color: red;"></i>
        <% end %>
        </td>
        <td>
        <% if tournament.u15? %>
        <i class="fas fa-check" style="color: green;"></i>
        <% else %>
        <i class="fas fa-times" style="color: red;"></i>
        <% end %>
        </td>
        <td>
        <% if tournament.u16? %>
        <i class="fas fa-check" style="color: green;"></i>
        <% else %>
        <i class="fas fa-times" style="color: red;"></i>
        <% end %>
        </td>
        <td>
        <% if tournament.u17? %>
        <i class="fas fa-check" style="color: green;"></i>
        <% else %>
        <i class="fas fa-times" style="color: red;"></i>
        <% end %>
        </td>
        <td>
        <% if tournament.u18? %>
        <i class="fas fa-check" style="color: green;"></i>
        <% else %>
        <i class="fas fa-times" style="color: red;"></i>
        <% end %>
        </td>
        <td>
        <% if tournament.u19? %>
        <i class="fas fa-check" style="color: green;"></i>
        <% else %>
        <i class="fas fa-times" style="color: red;"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

