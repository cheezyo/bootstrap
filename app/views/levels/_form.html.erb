<%= form_with(model: level, local: true) do |form| %>
  <% if level.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(level.errors.count, "error") %> prohibited this level from being saved:</h2>

      <ul>
        <% level.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color %>
  </div>
   <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>
  <p>next</p>
  <%= form.collection_select :next_level, Level.all, :id, :name %>
  <p>prev</p>
  <%= form.collection_select :prev_level, Level.all, :id, :name %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
