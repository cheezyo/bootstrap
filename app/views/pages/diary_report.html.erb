  <table class="table table-striped table-hover table-sm"id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      
                      <th>Player</th>
                      <th>Tennis m t</th>
                      <th>Tennis u t</th>
                      <th>Tennis tot mnd</th>
                      <th>Fys m t</th>
                      <th>Fys u t</th>
                      <th>Fys tot mnd</th>
                      <th>Tr. tot mnd</th>
