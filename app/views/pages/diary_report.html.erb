                  </thead>
                 
                  <tbody>
                    <% @players.each do |p| %>
                    <% if p.got_user? %>
                  <tr>
                    
                    <td>
                      <%= link_to p.fullname, p  %> (<%= p.get_age %>)
                    </td>
                  <td>
                    <%= p.get_tennis_trainings(true, false) %>
                  </td>
                  <td>
                    <%= p.get_tennis_trainings(false, false) %>
                  </td>
                  <td><b>
                    <%= p.tennis_total(false) %>
                  </b></td>
                  <td>
                    <%= p.get_physical_trainings(true, false) %>
                  </td>
                   <td>
                    <%= p.get_physical_trainings(false, false) %>
                  </td>
                   <td><b>
                    <%= p.physical_total(false) %>
                  </b></td>
                  <td><b>
                    <%= p.get_training_this_month %>
                  </b></td>
                  <td>
                    <%= p.get_tennis_trainings(true, true) %>
                  </td>
                  <td>
                    <%= p.get_tennis_trainings(false, true) %>
                  </td>
                  <td><b>
                    <%= p.tennis_total(false) %>
                  </b></td>
                  <td>
                    <%= p.get_physical_trainings(true, true) %>
                  </td>
                   <td>
                    <%= p.get_physical_trainings(false, true) %>
                  </td>
                   <td><b>
                    <%= p.physical_total(true) %>
                  </b></td>
                  <td><b>
                    <%= p.get_training_this_year %>
                  </b></td>
                  
                </tr>
                <% end %>
                <% end %>
              </tbody>
            </table>