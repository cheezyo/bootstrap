<p id="notice"><%= notice %></p>
<div class="d-sm-flex align-items-center justify-content-between mb-4">
	<h1 class="h3 mb-0 text-gray-800"><i class="fas fa-baseball-ball"></i> <%= @planet.title %> (<%= @planet.players.count %>)
		<small>stats last 12 months</small>
	</h1>
 </div>
 <hr/>






<div class="row">
	<div class="col-xl-12 col-md-12 mb-4">
		

			
		  	<div class="tab-pane active" id="players">
				<div class="col-xl-12 col-md-12 mb-4">
					 <table class="table table-bordered table-sm" id="dataTable" width="100%" cellspacing="0">
						  <thead>
						    <tr>
						      <th>Name</th>
						      <% if @planet.utr? %>
						      <th>UTR</th>
						      <th>W</th>
						      <th>L</th>
						      <th>T</th>
						      <th>%</th>
						      <% end %>
						      <% if @planet.stats? %>
						      <th>Match reports last year</th>
						      <% end %>

						      <th>Tasks </th>
						      <% if @planet.diary? %>
						      <th>Training last month</th>
						      <th>Training last year</th>
						      <% end %>
						    </tr>
						  </thead>

						  <tbody>
						    <% @planet.players.each do |p| %>
						      <tr>
						        <td><%= link_to p.fullname, p  %> (<%= p.get_age %>)</td>
						        <% if @planet.utr? %>
						        <td>
						        	<% if p.got_utr_profile? %>
						        	<%= p.utr_stats["singlesUtr"] %>
						        	<% else %>
						        	0
						        	<% end %>
						        	
						        </td>
						        <% if p.got_utr_profile? %>
						        <% m = p.utr_matches_array %>
						        <td><%= m[0] %></td>
						        <td><%= m[1] %></td>
						        <td><%= m[2] %></td>
						        <td><%= m[3] %>%</td>
						        <% else %>
						        <td>0</td>
						        <td>0</td>
						        <td>0</td>
						        <td>0</td>
						        <% end %>

						        <% end %>

						        <% if @planet.stats? %>
						      	<td><%= p.get_match_reports %></td>
						      	<% end %>
						      	<td><%= p.get_tasks_last_year.where(:done => false ).or(p.get_tasks_last_year.where(:done => nil )).count %>
						      		(<%= p.get_tasks_last_year.where(:done => true).count %>)
						      	</td>
						      	<% if @planet.diary? %>
						      	<td>
						      		<% if p.got_user? %>
						      		<%= p.get_training_this_month %>
						      		<% else %>
						      		0
						      		<% end %>
						      	</td>
						      	<td>
						      		<% if p.got_user? %>
						      		<%= p.get_training_this_year %>
						      		<% else %>
						      		0
						      		<% end %>
						      	</td>
						      	<% end %>
						      </tr>
						    <% end %>
						  </tbody>
						</table>
				</div>
			</div>

	</div>
</div>
