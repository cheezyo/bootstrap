<p id="notice"><%= notice %></p>
 <div class="card shadow mb-4">
            <div class="card-header py-3">
               <div class="d-sm-flex align-items-center justify-content-between mb-0">
                <h1 class="h3 mb-0 text-gray-800">Planets</h1>
              </div>
             
                <%= link_to 'New planet', new_planet_path, :class => "btn btn-primary mt-3" %>

            </div>
            <div class="card-body">
              
                <table class="table table-striped table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Title</th>
                      <th>Player access</th>
                      <th>Diary</th>
                      <th>Ironman</th>
                      <th>UTR</th>
                      <th>Stats</th>
                      <th>Events</th>
                      <th></th>
                
                    </tr>
                  </thead>
                 
                  <tbody>

                   <% @planets.each do |planet| %>
                    <tr>
                      <td><%= link_to planet.title, planet %> (<%= planet.players.count %>)
                      </td>
                      <td><% if planet.player_access? %>
                        <i class="fas fa-check" style="color: green;"></i>
                        <% else %>
                        <i class="fas fa-times" style="color: red;"></i>
                        <% end %>
                      </td>
                      <td><% if planet.diary? %>
                        <i class="fas fa-check" style="color: green;"></i>
                        <% else %>
                        <i class="fas fa-times" style="color: red;"></i>
                        <% end %>
                      </td>
                      <td><% if planet.ironman? %>
                        <i class="fas fa-check" style="color: green;"></i>
                        <% else %>
                        <i class="fas fa-times" style="color: red;"></i>
                        <% end %>
                      </td>
                      <td><% if planet.utr? %>
                        <i class="fas fa-check" style="color: green;"></i>
                        <% else %>
                        <i class="fas fa-times" style="color: red;"></i>
                        <% end %>
                      </td>
                      <td><% if planet.stats? %>
                        <i class="fas fa-check" style="color: green;"></i>
                        <% else %>
                        <i class="fas fa-times" style="color: red;"></i>
                        <% end %>
                      </td>
                      <td><% if planet.events? %>
                        <i class="fas fa-check" style="color: green;"></i>
                        <% else %>
                        <i class="fas fa-times" style="color: red;"></i>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to edit_planet_path(planet) do %>
                              <span><i class="fas fa-pen mr-2 ml-2" style="color:green;"></i></span>
                            <% end %>
                      </td>
                     

                    </tr>
                  <% end %>
                 
                    </tbody>
                </table>

            </div>
          </div>
