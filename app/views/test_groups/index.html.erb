<p id="notice"><%= notice %></p>
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="d-sm-flex align-items-center justify-content-between mb-0">
      <h1 class="h3 mb-0 text-gray-800">Test Groups</h1>
    </div>

    <%= link_to '+ New Test', new_test_group_path, :class => "btn btn-primary mt-3 pb-2"  %>
  </div>
  <div class="card-body">
    <table class="table table-striped table-hover table-sm table-responsive-xl " id="dataTable" width="100%" cellspacing="0">

      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @test_groups.each do |test_group| %>
          <tr>
            <td><%= link_to test_group.title, test_group %></td>
            <td><%= test_group.date %></td>

            <td>
              <%= link_to edit_test_group_path(test_group) do %>
                    <span><i class="fas fa-pen mr-2 ml-2" style="color:green;"></i></span>
                  <% end %>
            </td>
           
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



