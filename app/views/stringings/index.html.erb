 <div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800">Add new racket</h1>
</div>
 <%= form_for Stringing.new do |form| %>
    <table class="table table-bordered table-striped table-hover" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>Customer</th>
          <th>String type</th>
          <th>Tension</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td> <%= form.text_field :customer, autofocus: true, autocomplete: "Name", :class => "form-control form-control-user", placeholder: 'Name' %></td>
          <td><%= form.text_field :type_of_strings, autocomplete: "String type", :class => "form-control form-control-user", placeholder: 'String type'%></td>

          <td> <%= form.text_field :tension, autocomplete: "Tension", :class => "form-control form-control-user", placeholder: 'Tension'%></td>
          
          <td><%= form.number_field :price, autocomplete: "Price", :class => "form-control form-control-user", placeholder: 'Price' %></td>
          
          
          <td> <%= form.submit "Save",class: "btn btn-success btn-user"%></td>
        </tr>
      </tbody>
    </table>

  <% end %>
<hr/>
<div class="row mt-4">
  <div class="col-lg-4 col-md-12 mb-4 mt-1">
      <div class="card border-left-danger shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text font-weight-bold text-primary text-uppercase mb-3">Unpaid & not strung</div>
              <table class="table table-striped">
                <tbody>
              <% Stringing.get_un_paid.each do |a| %>

              <tr>
                <td><%= a.created_at.strftime("%Y-%m-%d") %></td>
                <td><%= a.customer %></td>
                <td>
                  <% if a.done? %>
                  <i class="fas fa-check" style="color: green;"></i>
                  <% else %>
                  <i class="fas fa-times" style="color: red;"></i>
                  <% end %>
                </td>
                <td>
                  <%= form_for(a, url: paid_stringings_path, method: :post) do |form| %>
                    <%= hidden_field_tag :id, a.id %>
                    <%= form.submit "PAID",class: "btn btn-danger btn-sm"%>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
              
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xl-4 col-md-12 mb-4 mt-1">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text font-weight-bold text-primary text-uppercase mb-3">Queue</div>
              <table class="table table-striped">
                <tbody>
              <% Stringing.get_queue.each do |a| %>

              <tr>
                <td><%= a.paid.strftime("%Y-%m-%d") %></td>
                <td><%= a.customer %></td>
                <td><%= a.type_of_strings %></td>
                <td><%= a.tension %></td>
                <td>
                  <%= form_for(a, url: done_stringings_path, method: :post) do |form| %>
                   <%= hidden_field_tag :id, a.id %>
                  <%= form.submit "DONE",class: "btn btn-warning btn-sm" %>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        </div>
      </div>
    </div>

  </div>
  <div class="col-xl-4 col-md-12 mb-4 mt-1">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
            <div class="text font-weight-bold text-primary text-uppercase mb-3">Paid & Done</div>
              <table class="table table-striped">
                <tbody>
              <% Stringing.get_paid_and_done.each do |a| %>

              <tr>
                <td><%= a.done.strftime("%Y-%m-%d") %></td>
                <td><%= a.customer %></td>
                <td>
                  <%= form_for(a, url: pick_up_stringings_path, method: :post) do |form| %>
                   <%= hidden_field_tag :id, a.id %>
                  <%= form.submit "DELIVER",class: "btn btn-success btn-sm" %>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        </div>
      </div>
    </div>

  </div>
</div>
