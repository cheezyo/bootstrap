<p id="notice"><%= notice %></p>


 <h1 class="h3 mb-2 text-gray-800">
  <%= @type_of_exercise.title %>
</h1>
<% TypeOfExercise.all.each do |t| %> 
	<% if t.title == @type_of_exercise.title %> 
		<u><b><%= link_to t.title, t %> |</b></u>
	<% else %>
		<%= link_to t.title, t %> |
	<% end %>
<% end %> 
<%= link_to "Full list", exercises_path %> |
<hr/>

<% [@boys, @girls].each do |t| %>
<h1 class="h5 mb-2 text-gray-800">
<%= t.empty? ? "NO DATA" : t.first.gender %> 
</h1>
  <table class="table table-striped table-hover table-sm table-responsive-xl "  width="100%" cellspacing="0">
      <thead class="thead-light">
        <tr>
          <th>Year/Age</th>
          <% (10..19).each do |n| %>
            <th><%= n %></th> 
          <% end %>
          
        </tr>
      </thead>
      <tbody>
      	<% @years.each do |y| %>
      	<tr>
      		<th><%= y %> </th>
      		<% t.where(year: y).first.results.each do |n| %>
      			 <td><small><%= n[0] %></small> <b><%= n[1] %></b> <small><%= n[2] %></small></td>
      		<% end %> 
      	</tr>
      	<% end %> 
      </tbody>
  </table>

  <% end %>


