<p id="notice"><%= notice %></p>

<h1 class="h3 mb-0 text-gray-800">Trainings</h1>

 <div class="card shadow mb-4">
            <div class="card-header py-3">
              <nav class="navbar navbar-expand-lg navbar-light bg-light p-0" >
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
             
                   
                  </ul>
                </div>
              </nav>
            </div>
            <div class="card-body">
              <div class="row mb-3">
                <%= link_to  new_training_path, :class => "btn btn-primary py-2" do %>
               <span>
                <i class="fas fa-plus mr-2"></i>
                
                Add new training</span>
              <% end %>
              </div>
              <div class="row">
                <table class="table table-striped table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                     <th>Type of training</th>
                    <th>Date</th>
                    <th>Time</th>
                    
                    <th>Comment</th>
                    <th colspan="2"></th>
    
                
                    </tr>
                  </thead>
                 
                  <tbody>

                   <% @trainings.each do |training| %>
                  <tr>
                    <td><%= training.type_of_training.title %></td>
                    <td><%= training.time %> min</td>
                    <td><%= training.t_date.strftime("%d-%m-%Y") %></td>
                    <td><%= training.coment_text %></td>
                    
                    <td><%= link_to 'Edit', edit_training_path(training) %></td>
                    <td><%= link_to 'Delete', training, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
                 
                    </tbody>
                </table>
              </div>
            </div>
          </div>
