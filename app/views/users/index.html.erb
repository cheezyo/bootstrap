<p id="notice"><%= notice %></p>
<!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Users</h1>
            
          </div>
 <!-- DataTales Example -->
        <% i = 0 %>

        

          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <nav class="navbar navbar-expand-lg navbar-light bg-light p-0" >
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
             
                    <% @names.each do |n| %>
                    <li class="nav-item <%= n == @name ? "active" : ""%> h6">
                      <%= link_to n, users_path + "?user_type=" + n, :class => "nav-link" %>
                    </li>
                      <% i = i + 1 %>
                    <% end %> 
                  </ul>
                </div>
              </nav>
            </div>
            <div class="card-body">
              
                <table class="table table-striped table-hover table-sm" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Player profile</th>
                      <th>Coach</th>
                      <th>Edit</th>
                      <th>Delete</th>
                      
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Player profile</th>
                      <th>Coach</th>
                      

                      <th>Edit</th>
                      <th>Delete</th>
                 
                    </tr>
                  </tfoot>
                  <tbody>

                    <% @users.each do |user| %>
                    <tr>
                      <td><%= link_to user.name, user %></td>
                      <td><%= user.email %></td>
                      <td><%= user.got_profile? ? "Yes" : "No" %> </td>
                      
                        <% if user.player? && user.got_profile? %>
                          <td>
                            <%= form_for UserPlayer.new do |f| %>
                              <%= f.collection_select :user_id, User.where(coach: true), :id, :name, :class => "form-control form-control-user", :include_blank => 'choose coach' %>
                              <%= f.hidden_field :player_id, :value => user.get_player_profile.id %>
                              <%= f.submit "Add" , :class => "btn btn-success"%>
                            <% end %>
                          </td>
                        <% else %>
                        <td>Empty</td>
                        <% end %>
                        
                      
                      <td><%= link_to 'Edit', edit_user_path(user) %></td>
                      <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                     

                    </tr>
                  <% end %>
                 
                    </tbody>
                </table>

            </div>
          </div>