


<div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                    
                    <img class="mb-2" src="https://www.stavangertk.no/wp-content/uploads/2019/03/stavangertennisklubb_logo_liggende.svg" >
                    </div>
              <div class="text-center">
                <h1 class="h3 text-gray-700 mb-4">Create an Account!</h1>
              </div>

              <%= form_for(@user) do |f| %>
               
                  <div class="col-sm-12 mb-4">
                    <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control form-control-user", placeholder: 'Full name' %>
                  </div>
            

                 <div class="col-sm-12 mb-4">
                    <%= f.email_field :email, autocomplete: "email", :class => "form-control form-control-user", placeholder: 'Email' %>
                    <div class="text-center"><p><small>(Will be your username)</small></p></div>
                  </div>
              
                <% if can? :assign_roles, @user %>
                 <div class="col-sm-12 mb-4">
                  <%= f.label :admin %>
                  <%= f.check_box :admin %><br />
                  <%= f.label :coach %>
                  <%= f.check_box :coach %><br />
                  <%= f.label :parent %>
                  <%= f.check_box :parent %>
                </div>
                <% end %>
                
                  <div class="col-sm-12 mb-3 mb-4">
                     <%= f.password_field :password, autocomplete: "new-password", :class => "form-control form-control-user", placeholder: 'Password' %>
                     <div class="text-center"><p><small>(At least 6 charaters)</small></p></div>
                </div>
     

              
                  <div class="col-sm-12 mb-3 mb-4">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control form-control-user", placeholder: 'Password confirmation' %>
                </div>
              
               <%= f.submit "Register Account", class: "btn btn-primary btn-user btn-block mb-4" %>
              <% end %>
              <hr>
             
              <div class="text-center">
                <a class="small" href="login.html">Already have an account? Login!</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

