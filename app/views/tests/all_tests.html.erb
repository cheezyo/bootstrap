<div class="page-header">
	<h1>All tests</h1>
</div>


<div class="tab-content">
	<div class="tab-pane active" id="ironman">
 
		<div class="col-xs-12 fluid">
		<table class="table table-striped table-hover table-sm"id="dataTable" width="100%" cellspacing="0">
				  <thead>
				    <tr>
				      <th>Player</th>
				      <th>Date</th>
				      <th>Test age</th>
				      <th>Sprint</th>
				      <th>Spider</th>
				      <th>Jump</th>
				      <th>Fh throw</th>
				      <th>Bh throw</th>
				      <th>Box</th>
				      <th>Chins</th>
				      <th>Sit ups</th>
				      <th>Push ups</th> 
				      <th>Front stretch</th>
				       <th>Back stretch</th>	
				      <th>Beep test</th>
				      <th>Test score</th>  
				      <th></th> 	      
				    </tr>
				  </thead>

				  <tbody>
				  	<% @tests.each do |t| %>
				  
				  	<tr>
				  		<td><%= link_to t.player.name, t.player %>- <%= t.player.gender %> - <%= t.age %></td>
				  		<td><%= t.test_group.date %></td>
				  		<td> <%= t.age %> </td>
				  		<td><%= t.sprint %></td>
				  		<td><%= t.spider %></td>
				  		<td><%= t.jump %></td>
				  		<td><%= t.fh_throw %></td>
				  		<td><%= t.bh_throw %></td>
				  		<td><%= t.box %></td>
				  		<td><%= t.chins %></td>
				  		<td><%= t.situps %></td>
				  		<td><%= t.pushups %></td>
				  		<td><%= t.front_stretch %></td>
				  		<td><%= t.back_stretch %></td>
				  		<td><%= t.beep %></td>
				  		<td><%= t.test_score %></td>
				  		<td>
				  			<%= link_to  tests_path + "?group=" + t.test_group.id.to_s do %>
                              <span><i class="fas fa-pen mr-2 ml-2" style="color:green;"></i></span>
                            <% end %>

				  		</td>

				  		
				  	</tr>
				  	
				  	<% end %>
				  </tbody>

				</table>

		</div>
	</div>
	
</div>